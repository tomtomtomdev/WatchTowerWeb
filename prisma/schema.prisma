generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model APIEndpoint {
  id              String   @id @default(cuid())
  name            String
  url             String
  method          String   @default("GET")
  headers         String   @default("{}")
  body            String?
  pollingInterval Int      @default(900)
  isEnabled       Boolean  @default(true)
  lastCheckedAt   DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  loginEndpointId  String?
  tokenJsonPath    String?
  cachedToken      String?
  cachedUserId     String?
  tokenRefreshedAt    DateTime?
  useApplyCodeLogin   Boolean  @default(false)

  healthCheckResults HealthCheckResult[]
  loginEndpoint      APIEndpoint?  @relation("LoginRef", fields: [loginEndpointId], references: [id], onDelete: SetNull)
  dependentEndpoints APIEndpoint[] @relation("LoginRef")

  @@map("api_endpoints")
}

model HealthCheckResult {
  id           String   @id @default(cuid())
  endpointId   String
  timestamp    DateTime @default(now())
  isSuccess      Boolean
  isTokenExpired Boolean  @default(false)
  statusCode     Int?
  responseTime Float
  errorMessage  String?
  responseBody  String?

  endpoint APIEndpoint @relation(fields: [endpointId], references: [id], onDelete: Cascade)

  @@index([endpointId, timestamp])
  @@map("health_check_results")
}

model Settings {
  id              String   @id @default("singleton")
  loginBaseUrl    String?
  loginEmail      String?
  loginPassword   String?
  cachedAccessToken String?
  cachedUserId      String?
  tokenRefreshedAt  DateTime?
  updatedAt       DateTime @updatedAt

  @@map("settings")
}
